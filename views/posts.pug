extends layout

block content
  h1.text-4xl.font-bold.text-center.mb-4.mt-2 All Posts
  
  // Card layout for posts
  .grid.grid-cols-1
    each post in posts
      .bg-white.shadow-lg.rounded-lg.p-4.mb-5
        .flex.items-center.mb-4
          img.w-10.h-10.rounded-full(src=`/assets/${post.userPicturePath}`, alt='User image')
          .ml-3
        h1 
        | Published By : 
        span.text-blue-500.font-semibold #{post.firstName} #{post.lastName}
        h2.font-bold.text-lg User Id : #{post.userId}
        h2.font-bold.text-lg Post Content :
            p.text-gray-700.mb-2 #{post.description}
        p.text-gray-500.text-sm #{new Date(post.createdAt).toLocaleString()}
        .flex.space-x-2.mt-4
          a.bg-blue-500.text-white.font-bold.py-2.px-4.rounded(href=`/admin/posts/showPostComments/${post._id}`) Comments
          a.bg-red-500.text-white.font-bold.py-2.px-4.rounded(href=`/admin/posts/delete/${post._id}`, onclick='return confirm("Are you sure you want to delete this post?")') Delete


  block scripts
    script(src='/js/layoutScripts.js')